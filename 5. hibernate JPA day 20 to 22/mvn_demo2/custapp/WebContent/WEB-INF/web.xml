<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>customerapp</display-name>
  <welcome-file-list>
    <welcome-file>loginController</welcome-file>
  </welcome-file-list>


  <servlet>
    <servlet-name>custcontroller</servlet-name>
    <servlet-class>com.customerapp.controller.CustomerController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>custcontroller</servlet-name>
    <url-pattern>/custcontroller.do</url-pattern>
  </servlet-mapping>
  
  
  
  <listener>
    <listener-class>com.customerapp.listners.DbDriverListner</listener-class>
  </listener>
  
  
  <servlet>
    <servlet-name>LoginController</servlet-name>
    <servlet-class>com.customerapp.controller.LoginController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginController</servlet-name>
    <url-pattern>/loginController</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
    <servlet-name>LogoutController</servlet-name>
    <servlet-class>com.customerapp.controller.LogoutController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutController</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  
  
  <filter>
    <display-name>SecurityFilter</display-name>
    <filter-name>SecurityFilter</filter-name>
    <filter-class>com.customerapp.filter.SecurityFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SecurityFilter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
  
  
  <filter>
    <display-name>LoggingFilter</display-name>
    <filter-name>LoggingFilter</filter-name>
    <filter-class>com.customerapp.filter.LoggingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoggingFilter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>com.customerapp.listners.SessionCounterListner</listener-class>
  </listener>
</web-app>